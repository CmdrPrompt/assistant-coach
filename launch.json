{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current Test File (vitest)",
      "type": "node",
      "request": "launch",
      // Vitest can be run as a CLI, so we point to its executable
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        // This will run the test file you currently have open
        "${relativeFile}",
        "--pool=forks", // Run in a separate process for better debugging
        "--no-threads" // Disable threads for more stable debugging
      ],
      "smartStep": true,
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Debug All Tests (vitest)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run"
      ],
      "smartStep": true,
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Debug via 'npm test'",
      "type": "node",
      "request": "launch",
      // Use npm as the executable
      "runtimeExecutable": "npm",
      // Pass arguments to npm
      "runtimeArgs": [
        "run",
        "test",
        // Add -- --inspect-brk to have npm pass the debug flag to node
        "--",
        "--inspect-brk"
      ],
      "console": "integratedTerminal",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ]
}
